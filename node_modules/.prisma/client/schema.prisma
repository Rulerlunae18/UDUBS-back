generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  title     String?
  bio       String?
  avatarUrl String?
  role      String
  createdAt DateTime @default(now())

  gameProfiles GameProfile[]
  realUsers    RealUser[]    @relation("UserToRealUser")

  fakeUser FakeUser?
}

model RealUser {
  id        Int       @id @default(autoincrement()) // —á–∏—Å–ª–æ–≤–æ–π id
  username  String
  email     String    @default("user@center.local")
  password  String    @unique // UUID –∏–∑ Ren'Py
  role      String    @default("RESEARCHER")
  avatarUrl String?
  createdAt DateTime  @default(now())
  last_seen DateTime? @updatedAt
  is_online Boolean   @default(false)

  userId Int?
  user   User? @relation("UserToRealUser", fields: [userId], references: [id])

  gameProfiles GameProfile[]
}

model GameProfile {
  id       String  @id @default(uuid())
  playerId String  @unique
  username String?
  platform String?

  // üì° —Å–∏—Å—Ç–µ–º–Ω–∞—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è
  system_lang String?
  ip          String?
  city        String?
  country     String?

  // ‚è±Ô∏è –∏–≥—Ä–æ–≤–∞—è —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞
  session_time           Int?     @default(0)
  total_playtime         Int?     @default(0)
  safe_mode              Boolean? @default(false)
  opened_game            Boolean? @default(false)
  first_playthrough_done Boolean? @default(false)

  // üß† —Å—é–∂–µ—Ç–Ω—ã–µ —Ñ–ª–∞–≥–∏
  silvair_rickroll Boolean? @default(false)
  scarlett_taunts  Boolean? @default(false)
  kassi_named      Boolean? @default(false)
  kassi_said       Boolean? @default(false)
  kassi_1          Boolean? @default(false)
  kassi_2          Boolean? @default(false)
  kassi_3          Boolean? @default(false)
  kassi_4          Boolean? @default(false)

  // üïí —Å–ª—É–∂–µ–±–Ω—ã–µ –ø–æ–ª—è
  collected_at DateTime? @default(now())
  last_online  DateTime? @updatedAt
  created_at   DateTime  @default(now())

  // üîó —Å–≤—è–∑–∏
  userId Int
  user   User @relation(fields: [userId], references: [id])

  realUserId Int?
  realUser   RealUser? @relation(fields: [realUserId], references: [id])
}

model FakeUser {
  id        Int      @id @default(autoincrement())
  codename  String
  rank      String?
  clearance String?
  bio       String?
  avatarUrl String?
  createdAt DateTime @default(now())

  userId Int?  @unique
  user   User? @relation(fields: [userId], references: [id])

  posts Post[] @relation("FakeUserPosts")
}

model Post {
  id           Int      @id @default(autoincrement())
  title        String
  body         String   @db.LongText
  coverImage   String?  @db.Text
  fileType     String?
  coverCaption String?
  stamp        String?
  clearance    String?
  authorName   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  images PostImage[]
  views  View[]

  fakeAuthorId Int?
  fakeAuthor   FakeUser? @relation("FakeUserPosts", fields: [fakeAuthorId], references: [id])
}

model PostImage {
  id       Int     @id @default(autoincrement())
  postId   Int
  imageUrl String
  caption  String?
  post     Post    @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model View {
  id        Int      @id @default(autoincrement())
  postId    Int
  viewedAt  DateTime @default(now())
  sessionId String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model Document {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  fileUrl     String
  createdAt   DateTime @default(now())
}

model FakeApplication {
  id        Int      @id @default(autoincrement())
  email     String
  fileUrl   String?
  createdAt DateTime @default(now())
}
